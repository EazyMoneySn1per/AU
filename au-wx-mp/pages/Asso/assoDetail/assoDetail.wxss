page {
  position: relative;
  height: 100%;
}

.banner {
  z-index: 1;
  width: 100%;
  height: 200rpx;
  background-color: #0D4E9A;
}

.assContent {
  z-index: 99999;
  height: 100%;
  border-top-left-radius: 16rpx;
  border-top-right-radius: 16rpx;
  background-color: #fff;
  transform: translateY(-10rpx);

  display: flex;
  flex-direction: column;
  align-items: center;
}

.assLogo {
  /* width: 200rpx; */
  /* height: 200rpx; */
  /* background-color: pink; */
  border-radius: 50%;
  transform: translateY(-80rpx);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.assLogo image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
}

.assLogo .presidentName {
  color: #5F5F5F;
  font-size: 24rpx;
  margin-top: 10rpx;
}

.assDesc, .assActivity {
  width: 88%;
  margin-bottom: 36rpx;
}

.assActivity {
  display: flex;
  flex-direction: column;
}

.assDesc .desc {
  color: #888;
  text-indent: 1.5em;
}

.assDesc .top {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.assActivity .top {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.icon {
  width: 50rpx;
  height: 50rpx;
  margin-right: 10rpx;
}