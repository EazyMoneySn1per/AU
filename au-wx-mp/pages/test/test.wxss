.retry {
  width: 180rpx;
  padding: 0;
  background-color: #2f66f4;
  color: #fff;
  border-radius: 24rpx;
  height: 90rpx;
  line-height: 90rpx;
  letter-spacing: 0.4em;
  font-size: 30rpx;
  text-align: center;
}

